{
  "apps": [
    {
      "name": "e-commerce",
      "script": "npm",
      "args": "run start:prod",
      "watch": false,
      "autorestart": true,
      "max_restarts": 4,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "merge_logs": true,
      "log_file": "logs/app.log",
      "error_file": "logs/error.log",
      "out_file": "logs/out.log",
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]
}
